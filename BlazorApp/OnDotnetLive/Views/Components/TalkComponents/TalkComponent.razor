@using OnDotnetLive.Views.Bases

@if (Talk != null)
{
    <CardBase>
        <img src="@Talk.ThumbnailUrl" width="100%" />
        <div style="height:70px">
            @if (Talk.HasDisplayTitle)
            {
                <h4>@Talk.DisplayTitle</h4>
            }
            else
            {
                <h4>@Talk.Title?.Replace("On .NET Live: ", "")</h4>
            }
        </div>

        <h5><span style="font-size:small">With</span> @Talk.Guests[0].Name.Split(Environment.NewLine)[0]</h5>
        <SpacerBase />
        <div style="justify-content:center">
            <ButtonBase Text="Watch now" OnClick=@WatchNowClicked />
        </div>
    </CardBase>
}
else
{
    <CardBase Height="250px" Width="510px">
        <SkeletonBase>
            <svg style="position: absolute; left: 0; top: 0;" id="pattern" width="100%" height="100%">
                <defs>
                    <mask id="mask" x="0" y="0" width="100%" height="100%">
                        <rect x="0" y="0" width="100%" height="100%" fill="#ffffff" />
                        <rect x="0" y="0" width="100%" height="45%" rx="4" />
                        <rect x="25" y="55%" width="90%" height="15px" rx="4" />
                        <rect x="25" y="65%" width="70%" height="15px" rx="4" />
                        <rect x="25" y="80%" width="90px" height="30px" rx="4" />
                    </mask>
                </defs>
                <rect x="0" y="0" width="100%" height="100%" mask="url(#mask)" fill="#ffffff" />
            </svg>
        </SkeletonBase>
    </CardBase>
}